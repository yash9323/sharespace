<div id="listview">
    <input type="text" name="search" id="search" oninput="searchbyaddress()" placeholder="search for a address">
<p id="showsearchvalue" style="display: none;"></p>
<div id="filteroptions">
    <select id="filter" onchange="showselectedfilter()">
        <option value="price">Price</option>
        <option value="area">Area</option>
        <option value="volume">Volume</option>
    </select>
    <button type="submit" id="reset" onclick="reset()">Reset Filtering</button>
</div>
<div id="pricefilterdiv" style="display: none;">
    <h3>Price Filtering</h3>
<input type="range" min="5" max="50" class="slider" id="priceRange" oninput="filterprice()">
<p id="filter_price"></p>
</div>
<div id="areafilterdiv" style="display: none;">
    <h3>Area Filtering</h3>
<input type="range" min="10" max="700" class="slider" id="areaRange" oninput="filterarea()">
<p id="filter_area"></p>
</div>
<div id="volumefilterdiv" style="display: none;">
    <h3>Volume Filtering</h3>
<input type="range" min="10" max="1000" class="slider" id="volumeRange" oninput="filtervolume()">
<p id="filter_volume"></p>
</div>
